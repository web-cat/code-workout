.max-height#main{class: "#{controller_name}-#{action_name}"}
  .scrollable.max-height.content
    .inner.max-height
      .below-nav
        = render partial: 'layouts/flash'
        .container
          - if controller_name.eql?('workouts') && action_name.eql?('new')
            .row
              = render partial: 'layouts/sidebar'
            .row
              = yield
          - else
            = yield
