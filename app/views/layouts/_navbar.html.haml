%header.navbar.yamm.navbar-inverse.navbar-fixed-top
  .container-fluid
    .navbar-header
      = link_to 'CodeWorkout', root_path, class: 'navbar-brand'
    .navbar-collapse.collapse
      %ul.nav.navbar-nav.nav-top
        %li.dropdown
          %a.dropdown-toggle{ href: gym_url,
            data: { toggle: 'dropdown' }, value: 'Gym' }
            Gym
          %ul.dropdown-menu
            %li
              .yamm-content
                %ul.list-unstyled
                  %li
                    %strong Workouts
                  %li= link_to 'Browse all', workouts_path
                  %li
                    %strong Exercises
                  %li= link_to 'Browse all', exercises_path
        %li.dropdown
          %a.dropdown-toggle{ href: organizations_path,
            data: { toggle: 'dropdown' }, value: 'Course' }
            Course
          %ul.dropdown-menu
            %li
              .yamm-content
                %ul.list-unstyled
                  %li
                    %strong Courses
                  %li
                    %strong= link_to 'Browse all', organizations_path
                  - if user_signed_in? && current_user.course_enrollments.any?
                    - term = Term.current_term
                    - current_user.courses_for_term(term).each do |c|
                      %li= link_to c.display_name,
                        organization_course_path(c.organization, c, term)

      %ul.nav.navbar-nav.navbar-right.nav-top
        %li= render :partial => 'exercises/search'
        - if user_signed_in?
          - if current_user.global_role.can_edit_system_configuration?
            %li= link_to icon_tag_for('wrench'), admin_dashboard_path
          - elsif current_user.global_role.is_instructor?
            %li= link_to icon_tag_for('wrench'), admin_course_offerings_path
          %li= link_to current_user.email, current_user
          %li
            = link_to destroy_user_session_path, method: :delete do
              %i.fa.fa-sign-out
        - else
          %li.dropdown
            %a.dropdown-toggle{ href: '/signup',
              data: { toggle: 'dropdown' }, value: 'Sign up' }
              Sign Up
            .dropdown-menu.auth
              = render 'home/sign_up'
          %li.dropdown
            %a.dropdown-toggle{ href: '/signin',
              data: { toggle: 'dropdown' }, value: 'Sign in' }
              Sign in
            .dropdown-menu.auth
              = render 'home/sign_in'
          -#%li= link_to 'Sign Up', new_user_registration_path
          -#%li= link_to 'Sign In', new_user_session_path
